@model CFirstApproach.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="delete-container">
    <div class="delete-card">
        <div class="delete-header">
            <div class="warning-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1>Confirm Deletion</h1>
            <p>You are about to delete the following employee record. This action cannot be undone.</p>
        </div>

        <div class="employee-details">
            <div class="detail-row">
                <div class="detail-group">
                    <span class="detail-label">
                        <i class="fas fa-user"></i>
                        @Html.DisplayNameFor(model => model.Name)
                    </span>
                    <span class="detail-value">@Html.DisplayFor(model => model.Name)</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">
                        <i class="fas fa-venus-mars"></i>
                        @Html.DisplayNameFor(model => model.Gender)
                    </span>
                    <span class="detail-value">@Html.DisplayFor(model => model.Gender)</span>
                </div>
            </div>

            <div class="detail-row">
                <div class="detail-group">
                    <span class="detail-label">
                        <i class="fas fa-birthday-cake"></i>
                        @Html.DisplayNameFor(model => model.Age)
                    </span>
                    <span class="detail-value">@Html.DisplayFor(model => model.Age)</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">
                        <i class="fas fa-map-marker-alt"></i>
                        @Html.DisplayNameFor(model => model.City)
                    </span>
                    <span class="detail-value">@Html.DisplayFor(model => model.City)</span>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="Id" />
            <div class="action-buttons">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i>
                    Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .delete-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .delete-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .delete-header {
        background: linear-gradient(to right, #e74c3c, #c0392b);
        padding: 2rem;
        text-align: center;
        color: white;
    }

    .warning-icon {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2.5rem;
    }

    .delete-header h1 {
        margin: 0 0 1rem;
        font-size: 2rem;
        font-weight: 600;
    }

    .delete-header p {
        margin: 0;
        opacity: 0.9;
        font-size: 1.1rem;
    }

    .employee-details {
        padding: 2rem;
    }

    .detail-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 1.5rem;
    }

    .detail-group {
        background: #f8f9fa;
        padding: 1.2rem;
        border-radius: 12px;
    }

    .detail-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

        .detail-label i {
            color: #e74c3c;
        }

    .detail-value {
        font-size: 1.1rem;
        color: #2c3e50;
        font-weight: 500;
    }

    .delete-form {
        padding: 0 2rem 2rem;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        border-top: 1px solid #e9ecef;
        padding-top: 1.5rem;
    }

    .btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-danger {
        background: #e74c3c;
        color: white;
    }

    .btn-secondary {
        background: #f1f5f9;
        color: #64748b;
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .btn-danger:hover {
        background: #c0392b;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
        color: #475569;
    }

    
</style>
