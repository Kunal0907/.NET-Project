@model CFirstApproach.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="details-container">
    <div class="details-card">
        <div class="details-header">
            <div class="profile-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <h1>Employee Profile</h1>
            <div class="employee-id">ID: @Model.Id</div>
        </div>

        <div class="details-content">
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-id-card"></i>
                        @Html.DisplayNameFor(model => model.Name)
                    </div>
                    <div class="info-value">@Html.DisplayFor(model => model.Name)</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-venus-mars"></i>
                        @Html.DisplayNameFor(model => model.Gender)
                    </div>
                    <div class="info-value">@Html.DisplayFor(model => model.Gender)</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-birthday-cake"></i>
                        @Html.DisplayNameFor(model => model.Age)
                    </div>
                    <div class="info-value">@Html.DisplayFor(model => model.Age) years</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-map-marker-alt"></i>
                        @Html.DisplayNameFor(model => model.City)
                    </div>
                    <div class="info-value">@Html.DisplayFor(model => model.City)</div>
                </div>
            </div>

            <div class="action-buttons">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i>
                    Edit Profile
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .details-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .details-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .details-header {
        background: linear-gradient(135deg, #4CAF50, #45a049);
        padding: 2.5rem;
        text-align: center;
        color: white;
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
    }

    .details-header h1 {
        margin: 0;
        font-size: 2rem;
        font-weight: 600;
    }

    .employee-id {
        margin-top: 0.5rem;
        font-size: 1rem;
        opacity: 0.9;
    }

    .details-content {
        padding: 2rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-item {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 12px;
        transition: transform 0.3s ease;
    }

        .info-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .info-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

        .info-label i {
            color: #4CAF50;
        }

    .info-value {
        font-size: 1.2rem;
        color: #2c3e50;
        font-weight: 500;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        border-top: 1px solid #e9ecef;
        padding-top: 1.5rem;
    }

    .btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: #4CAF50;
        color: white;
    }

    .btn-secondary {
        background: #f1f5f9;
        color: #64748b;
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .btn-primary:hover {
        background: #45a049;
        color: white;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
        color: #475569;
    }

    
</style>
