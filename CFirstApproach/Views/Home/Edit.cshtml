@model CFirstApproach.Models.Employee

@{
    ViewData["Title"] = "New Employee";
}

<div class="dashboard-container">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="profile-info">
                <h2>New Employee Registration</h2>
                <span class="profile-id">Create Profile</span>
            </div>
        </div>

        <form asp-action="Create" class="smart-form">
            <div class="form-sections">
                <div class="form-section">
                    <div class="input-group">
                        <div class="input-label">
                            <i class="fas fa-id-card"></i>
                            <label asp-for="Name">Full Name</label>
                        </div>
                        <input asp-for="Name" class="smart-input" placeholder="Enter full name" />
                        <span asp-validation-for="Name" class="error-text"></span>
                    </div>

                    <div class="input-group">
                        <div class="input-label">
                            <i class="fas fa-venus-mars"></i>
                            <label asp-for="Gender">Gender</label>
                        </div>
                        <select asp-for="Gender" class="smart-input">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="error-text"></span>
                    </div>
                </div>

                <div class="form-section">
                    <div class="input-group">
                        <div class="input-label">
                            <i class="fas fa-calendar-alt"></i>
                            <label asp-for="Age">Age</label>
                        </div>
                        <input asp-for="Age" class="smart-input" type="number" placeholder="Enter age" />
                        <span asp-validation-for="Age" class="error-text"></span>
                    </div>

                    <div class="input-group">
                        <div class="input-label">
                            <i class="fas fa-map-marker-alt"></i>
                            <label asp-for="City">City</label>
                        </div>
                        <input asp-for="City" class="smart-input" placeholder="Enter city" />
                        <span asp-validation-for="City" class="error-text"></span>
                    </div>
                </div>
            </div>

            <div class="action-bar">
                <a asp-action="Index" class="action-button secondary">
                    <i class="fas fa-arrow-left"></i>
                    Return to Dashboard
                </a>
                <button type="submit" class="action-button">
                    <i class="fas fa-plus"></i>
                    Create Employee
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .dashboard-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .profile-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .profile-header {
        background: linear-gradient(135deg, #0396FF 0%, #0D47A1 100%);
        padding: 2rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        color: white;
    }

    .profile-icon {
        background: rgba(255, 255, 255, 0.2);
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
    }

    .profile-info h2 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 600;
    }

    .profile-id {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .smart-form {
        padding: 2rem;
    }

    .form-sections {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .form-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .input-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .input-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #2c3e50;
        font-weight: 500;
    }

        .input-label i {
            color: #3498db;
        }

    .smart-input {
        padding: 0.8rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .smart-input:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
            outline: none;
        }

    .error-text {
        color: #e74c3c;
        font-size: 0.85rem;
    }

    .action-bar {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        border-top: 1px solid #e2e8f0;
        margin-top: 2rem;
        padding-top: 2rem;
    }

    .action-button {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        cursor: pointer;
        border: none;
        text-decoration: none;
        background: linear-gradient(135deg, #0396FF 0%, #0D47A1 100%);
        color : white;
    }

    .secondary {
        background: #f1f5f9;
        color: #64748b;
    }

    .action-button:hover {
        transform: translateY(-2px);
    }


    .secondary:hover {
        background: #e2e8f0;
        color: #475569;
        text-decoration: none;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
